<%- include("partials/loginHeader") %>
<main class="form-login">
  <form action="/users/login" method="post">
    <h1 class="h3 mb-3 fw-normal">Giriş Yap</h1>

    <div class="form-floating">
      <input
        type="email"
        class="form-control form-input"
        id="mail"
        placeholder="name@example.com"
        name="mail"
      />
      <label for="mail">Email adresi</label>
    </div>
    <div class="form-floating">
      <input
        type="password"
        class="form-control form-input"
        id="password"
        name="password"
        placeholder="Password"
      />
      <label for="password">Şifre</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş</button>
    <% if(error) {%>
    <div id="emailHelp" class="form-text">
      Giriş sırasında hata oluştu! Tekrar dene!
    </div>
    <% }else if(!error){ %>
    <div id="emailHelp" class="form-text"></div>
    <% } %>
  </form>
</main>

<%- include("partials/footer") %>
